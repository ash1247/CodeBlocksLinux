#include <iostream>
#include <fstream>
#include "TextQuery.h"
#include "QueryResult.h"

void runQueris(std::ifstream &infile) {
  TextQuery tq(infile);
  while (true) {
    std::cout << "Enter word to look for, or 'q' to exit ";
    std::string s;
    if (!(std::cin >> s) || s == "q")
      break;
    print(std::cout, tq.query(s)) << std::endl;
  }
}
